@page
@model LoginModel
@{
    ViewData["Title"] = "Bejelentkezés";
    Layout = "~/Areas/Identity/Pages/_Regadatok.cshtml";
    
}

@*Bejelentkezés Razor oldala*@
<form method="post" id="account" role="login">

    <h2 style="text-align:center">Bejelentkezés</h2>
    <hr style="border: 2px white solid" />
    <img src="~/assets/images/logo.png" class="img-responsive" alt="" />

    <div class="form-group">
        <input asp-for="Input.Email" placeholder="Email" required class="form-control input-sm" />

    </div>
    <div class="form-group">
        <input asp-for="Input.Password" placeholder="Jelszó" required class="form-control input-sm" />

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-sm btn-block btn-primary">Bejelentkezés</button>
    </div>
    <div class="form-links text-black">
        Regisztrációhoz kattints <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ide</a>!
        <div asp-validation-summary="All" class="text-danger"></div>
        <a asp-page="~/../Home/Index"><h4 style="color:turquoise">Vissza a főoldalra!</h4></a>
    </div>
    

</form>

    

    
             
    
            

    


