@using Microsoft.AspNetCore.Identity
@using Projekt.Areas.Identity.Data
@inject SignInManager<ProjektUser> SignInManager
@inject UserManager<ProjektUser> UserManager

@{
    var profil = await UserManager.GetUserAsync(User);
}



<header class="top">
    <nav class="navbar navbar-expand-md bg-light navbar-light">
        @if (profil.Email == "Admin@admin.eu")
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Főoldal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Search">Lista</a>
                </li>
            </ul>

        }
        else
        {
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Főoldal</a>
                </li>
            </ul>

        }

    </nav>
</header>