@{ ViewData["Title"] = "Feltöltés";}
@model IEnumerable<Osszesitett>
    <!-- Feltöltés oldala -->
    <header class="top">
        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <partial name="~/Views/Shared/_LoginPartial.cshtml" />
            <a asp-action="index">Főoldal</a>
            <a asp-action="Tortenet">Történet</a>
            <a asp-action="Feldolgozas">Feldolgozas</a>
            <a asp-action="Leiras">Leírás</a>
            <a asp-action="Ismerteto">Ismertető</a>
            <a class="active" asp-action="Feltoltes">Feltöltés</a>
        </div>

        <nav id="navbar">
            <div class="container">
                <div class="row">
                    <div class="col-lg-5 col-md-5 align-self-center left-side">
                        <partial name="~/Views/Shared/_WelcomePartial.cshtml" />
                    </div>
                    <div class="col-lg-2 col-md-2 col-5 align-self-center logo">
                        <a asp-action="index"><img src="~/template/images/nav-logo.png" alt="logo"></a>
                    </div>
                    <div class="col-lg-5 col-md-5 col-7 align-self-center right-side">
                        <div class="social-icons square">
                            <div id="page-content-wrapper">
                                <span class="slide-menu" onclick="openNav()"><i class="fa fa-bars" aria-hidden="true"></i></span>
                            </div>
                        </div>
                        <div class="social-icons another">
                            <i class="fa fa-facebook-official" aria-hidden="true"></i>
                            <i class="fa fa-twitter" aria-hidden="true"></i>
                            <i class="fa fa-pinterest" aria-hidden="true"></i>
                            <i class="fa fa-youtube" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <img class="border-img" src="~/template/images/border.png" width="100%" alt="">
    </header>

    <section class="banner-another ">
    </section>
    <section id="services">
        <div class="container">
            <h2 data-aos="fade-up" data-aos-delay="200">Feltöltés</h2>
            <div class="part-2" data-aos="fade-up" data-aos-delay="400">
                <div class="row">
                    <div class="col-md-8 heading">
                        <form method="post" asp-action="Upload" enctype="multipart/form-data">
                            <div class="form-group"></div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group-lg">
                                <label @Html.DisplayNameFor(x => x.Latin) class="control-label">Latin</label>
                                <input @Html.DisplayNameFor(x => x.Latin) class="form-control" name="Latin" required />
                            </div>
                            <div class="form-group">
                                <label @Html.DisplayNameFor(x => x.Magyar) class="control-label">Magyar</label>
                                <input @Html.DisplayNameFor(x => x.Magyar) class="form-control" name="Magyar" required />

                            </div>
                            <div class="form-group">
                                <label @Html.DisplayNameFor(x => x.Honap) class="control-label">Honap</label>
                                <select class="custom-select mr-sm-2" name="Honap">
                                    <option selected>@Osszesitett.elofordulas.First().Honap</option>
                                    @foreach (var item in Osszesitett.elofordulas.Skip(1))
                                    {
                                        <option value="@item.Honap">@item.Honap</option>
                                    }
                                </select>

                            </div>
                            <div class="form-group">
                                <label @Html.DisplayNameFor(x => x.Resz) class="control-label">Resz</label>
                                <select class="custom-select mr-sm-2" name="Resz">
                                    <option selected>@Osszesitett.gyujtott.First().Resz</option>
                                    @foreach (var item in Osszesitett.gyujtott.Skip(1))
                                    {
                                        <option value="@item.Resz">@item.Resz</option>
                                    }
                                </select>

                            </div>
                            <div class="form-group">
                                <label @Html.DisplayNameFor(x => x.Tipus) class="control-label">Tipus</label>
                                <select class="custom-select mr-sm-2" name="Tipus">
                                    <option selected>@Osszesitett.betegseg.First().Tipus</option>
                                    @foreach (var item in Osszesitett.betegseg.Skip(1))
                                    {
                                        <option value="@item.Tipus">@item.Tipus</option>
                                    }
                                </select>

                            </div>
                            <div class="form-group">
                                <label for="file" class="control-label">Kép: </label>
                                <input type="file" name="file" value="" required accept="image/*" />
                            </div>
                            <div class="form-group">
                                <label @Html.DisplayNameFor(x => x.Leiras)>Rövid leírás:</label>
                                <textarea class="form-control" id="leiras" name="leiras" rows="8" maxlength="660" wrap="hard"></textarea>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Létrehozás" class="btn btn-danger" />
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <footer class="contact">
        <div class="gradient"></div>
        <div class="copyright">
            <div class="container">
                <div class="row border-img">
                    <div class="col-md-12">
                        <img src="~/template/images/border.png" alt="">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-12">
                        <a asp-action="index"><img src="~/template/images/footer-logo-bg.png" alt="logo"></a>
                    </div>
                    <div class="col-lg-9 col-md-12 right-part">
                        <ul class="ml-auto">
                            <partial name="~/Views/Home/ProfilCheck.cshtml" />
                            <li class="nav-item active">
                                <a class="nav-link active" asp-action="index">Főoldal <span class="sr-only">(current)</span></a>
                            </li>
                            <li><a class="hidden-xs">~</a></li>
                            <li class="nav-item"><a class="nav-link" asp-action="Feldolgozas">Feldolgozás</a></li>
                            <li><a class="hidden-xs">~</a></li>
                            <li class="nav-item"><a class="nav-link" asp-action="Leiras">Leírás</a></li>
                            <li><a class="hidden-xs">~</a></li>
                            <li class="nav-item"><a class="nav-link" asp-action="Ismerteto">Ismertető</a></li>
                            <partial name="~/Views/Home/UserCheckBar.cshtml" />
                        </ul>
                        <p> (C) Rajcsány Zsolt - 2021 - Powered by: <a href="https://www.template.net/editable/websites/html5" target="_blank"> Template.net</a></p>
                    </div>
                </div>
            </div>
        </div>
    </footer>



