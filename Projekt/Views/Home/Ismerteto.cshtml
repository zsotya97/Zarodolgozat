@model List<Osszesitett>
@{ ViewData["Title"] = "Ismertető";}
<header class="top">
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <partial name="~/Views/Shared/_LoginPartial.cshtml" />
        <a asp-action="index">Főoldal</a>
        <a asp-action="Tortenet">Történet</a>
        <a asp-action="Feldolgozas">Feldolgozás</a>
        <a asp-action="Leiras">Leírás</a>
        <a class="active" asp-action="Ismerteto">Ismertető</a>
        <partial name="~/Views/Home/UserCheck.cshtml" />
    </div>

    <nav id="navbar">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-5 align-self-center left-side">
                    <partial name="~/Views/Shared/_WelcomePartial.cshtml" />
                </div>
                <div class="col-lg-2 col-md-2 col-5 align-self-center logo">
                    <a asp-action="index"><img src="~/template/images/nav-logo.png" alt="logo"></a>
                </div>
                <div class="col-lg-5 col-md-5 col-7 align-self-center right-side">
                    <div class="social-icons square">
                        <div id="page-content-wrapper">
                            <span class="slide-menu" onclick="openNav()"><i class="fa fa-bars" aria-hidden="true"></i></span>
                        </div>
                    </div>
                    <div class="social-icons another">
                        <i class="fa fa-facebook-official" aria-hidden="true"></i>
                        <i class="fa fa-twitter" aria-hidden="true"></i>
                        <i class="fa fa-pinterest" aria-hidden="true"></i>
                        <i class="fa fa-youtube" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <img class="border-img" src="~/template/images/border.png" width="100%" alt="">
</header>

<section class="banner-another ">
</section>
<section id="rates">
    <div class="container">
        @if (Model != null)
        {
<h2 data-aos="fade-up" data-aos-delay="200">Növényeink</h2>
                <div class="part-1" data-aos="fade-up" data-aos-delay="400">
                    <div class="row">
                        <div class="col-md-12 col-12 heading">
                            <h3><i class="fa fa-envira" aria-hidden="true"></i>@($"{Model.First().Magyar} ({Model.First().Latin})")</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-12">
                            <figure>
                                <img src="~/images/Novenyek/@Model.First().Kep" alt="@Model.First().Magyar" title="@Model.First().Magyar" width="100%">
                            </figure>
                        </div>
                        <div class="col-lg-9 col-md-8 col-12 col1">
                            <p>Előfordulásának kezdeti hónapja: @(Model.First().Honap)</p>
                            <h6>Betegség típusa: @Model.First().Tipus <span>Felhasznált része: @Model.First().Resz</span></h6>
                        </div>
                    </div>
                </div>
                                @foreach (var item in Model.Skip(1))
                                {
                <div class="part-2" data-aos="fade-up" data-aos-delay="400">
                    <div class="row">
                        <div class="col-md-12 heading">
                            <h3><i class="fa fa-envira" aria-hidden="true"></i>@($"{item.Magyar} ({item.Latin})")</h3>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3 col-md-4 col-12">
                            <figure>
                                <img src="~/images/Novenyek/@item.Kep" alt="@item.Magyar" title="@item.Magyar" width="100%">
                            </figure>
                        </div>
                        <div class="col-lg-9 col-md-8 col-12 col1">
                            <p>Előfordulásának kezdeti hónapja: @item.Honap</p>
                            <h6>Betegség típusa: @item.Tipus <span>Felhasznált része: @item.Resz</span></h6>
                        </div>
                    </div>
                </div>} }
                            else
                            {
                <h3>Nincs az adatbázisban megfelelő növény</h3>}
    </div>

</section>

<footer class="contact">
    <div class="gradient"></div>
    <div class="copyright">
        <div class="container">
            <div class="row border-img">
                <div class="col-md-12">
                    <img src="~/template/images/border.png" alt="">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-12">
                    <a asp-action="index"><img src="~/template/images/footer-logo-bg.png" alt="logo"></a>
                </div>
                <div class="col-lg-9 col-md-12 right-part">
                    <ul class="ml-auto">
                        <partial name="~/Views/Home/ProfilCheck.cshtml" />
                        <li class="nav-item active">
                            <a class="nav-link active" asp-action="index">Főoldal <span class="sr-only">(current)</span></a>
                        </li>
                        <li><a class="hidden-xs">~</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Feldolgozas">Feldolgozás</a></li>
                        <li><a class="hidden-xs">~</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Leiras">Leírás</a></li>
                        <li><a class="hidden-xs">~</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Ismerteto">Ismertető</a></li>
                        <partial name="~/Views/Home/UserCheckBar.cshtml" />
                    </ul>
                    <p> (C) Rajcsány Zsolt - 2021 - Powered by: <a href="https://www.template.net/editable/websites/html5" target="_blank"> Template.net</a></p>
                </div>
            </div>
        </div>
    </div>
</footer>


<script></script>

